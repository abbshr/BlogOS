<!DOCTYPE html>
<html>
	<head>
		<%- include head %>
	</head>
	<body>
		<%- include title %>
		<%- include adminnavbar %>
		<%- include flashinfo %>
		<label>应用信息列表</label><br>
		<ul>
		<% if (appInfo) { %>
			<% var front %>
			<% for (var head in appInfo) { %>
				<% if (head !== 'memory' && head !== '_id') { %>
					<% if (head === 'usersnumber') { %>
						<% front = '用户数量' %>
					<% } %>
					<% if (head === 'postsnumber') { %>
						<% front = '文章数量' %>
					<% } %>
					<% if (head === 'adminsnumber') { %>
						<% front = 'rooter数量' %>
					<% } %>
					<% if (head === 'sitepv') { %>
						<% front = '访问统计' %>
					<% } %>	
				<li><label><%= front %>：</label><%= appInfo[head] %></li>
				<% } %>
			<% } %>
		<% } %>
		</ul>
		<%- include foot %>
	</body>
</html>
